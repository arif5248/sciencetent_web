{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "cron": {
    "jobs": [
      {
        "path": "/api/v1/cron-birthday-notification",
        "schedule": "42 1 * * *",
        "timezone": "Asia/Dhaka"
      }
    ]
  }
}
